{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
     {
       "name": "django_static",
       "host": {
         "sourcePath": "/var/app/current/nongjang/static"
       }
     }
   ],
  "containerDefinitions": [
    {
      "name": "code",
      "image": "165498330170.dkr.ecr.ap-northeast-2.amazonaws.com/orangenongjang/orangenongjang_nongjang:latest",
      "environment": [
        {
          "name": "MODE",
          "value": "prod"
        }
      ],
      "essential": true,
      "memory": 256,
      "mountPoints": [
        {
          "sourceVolume": "django_static",
          "containerPath": "/app/api/nongjang/static"
        },
        {
          "sourceVolume": "awseb-logs-code",
          "containerPath": "/var/log/code"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "165498330170.dkr.ecr.ap-northeast-2.amazonaws.com/orangenongjang/orangenongjang_nginx:latest",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "links": [
        "code"
      ],
      "mountPoints": [
        {
          "sourceVolume": "django_static",
          "containerPath": "/var/www/django_static",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-nginx",
          "containerPath": "/var/log/nginx"
        }
      ]
    }
  ]
}
